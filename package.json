{
  "name": "open-source-tracker",
  "version": "1.0.0",
  "description": "Open Source Growth Tracker with AWS deployment",
  "scripts": {
    "start": "concurrently \"cd backend && node index.js\" \"cd frontend && npm start\"",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm test -- --watchAll=false --passWithNoTests",
    "cdk": "cdk",
    "cdk:dev": "cdk deploy --profile default --context environment=dev",
    "cdk:prod": "cdk deploy --profile default --context environment=prod",
    "cdk:destroy:dev": "cdk destroy --profile default --context environment=dev",
    "cdk:destroy:prod": "cdk destroy --profile default --context environment=prod",
    "cdk:diff:dev": "cdk diff --profile default --context environment=dev",
    "cdk:diff:prod": "cdk diff --profile default --context environment=prod",
    "dev:setup": "git checkout develop && git pull origin develop",
    "dev:feature": "git checkout -b feature/$(date +%Y%m%d-%H%M%S)",
    "dev:test": "echo 'Testing in dev environment: https://dcujo2wk56am6.cloudfront.net'",
    "dev:promote": "git checkout main && git merge develop && git push origin main",
    "dev:status": "echo 'Current branch:' && git branch --show-current && echo 'Dev URL: https://dcujo2wk56am6.cloudfront.net'",
    "dev:auth:show": "node scripts/update-dev-auth.js show",
    "dev:auth:update": "node scripts/update-dev-auth.js update",
    "dev:auth:custom": "node scripts/update-dev-auth.js update",
    "db:status": "node scripts/manage-databases.js status",
    "db:separate": "node scripts/manage-databases.js separate",
    "db:sync": "node scripts/manage-databases.js sync",
    "db:copy": "node scripts/manage-databases.js copy",
    "automation:status": "node scripts/check-automation.js status",
    "automation:setup-token": "node scripts/check-automation.js setup-token",
    "automation:test": "node scripts/check-automation.js test"
  },
  "keywords": [
    "github",
    "analytics",
    "aws",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "aws-cdk": "^2.124.0",
    "aws-cdk-lib": "^2.124.0",
    "concurrently": "^9.2.0",
    "constructs": "^10.3.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "better-sqlite3": "^12.2.0"
  }
}
